{{> main pageTitle="Book Gallery"}}

{{#contentFor "customStyles"}}
    <style>
        /* Add custom styles for the book gallery page if needed */
        .book-card {
            border: 1px solid #ddd;
            padding: 10px;
            margin: 10px;
            background-color: #f9f9f9;
        }
        .book-card img {
            max-width: 100%;
            height: auto;
        }
    </style>
{{/contentFor}}

{{#block "body"}}
    <h2>Book Gallery</h2>
    <div class="row">
        {{#each books}}
            <div class="col-md-4">
                <div class="book-card">
                    <h3>{{this.title}}</h3>
                    <p>Author: {{this.author}}</p>
                    <img src="{{this.coverImage}}" alt="{{this.title}}">
                    <!-- Additional book details can be displayed here -->
                    <a href="/book/{{this.id}}" class="btn btn-primary">View Details</a>
                </div>
            </div>
        {{/each}}
    </div>
{{/block}}
