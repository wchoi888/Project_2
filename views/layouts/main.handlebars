<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Virtual Bookshelf</title>
    <!-- Include Bootstrap CSS link here -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <header>
      <a href="/"><img src="/images/bookshelf-logo.png" alt="logo" /></a>
      <h1>My Bookshelf</h1>
    </header>
    {{! <h1>My Bookshelf</h1> }}

    <div class="container mt-4">
      <!-- Dynamic content injected by the server (e.g., using a templating engine) -->
      {{{body}}}
    </div>
    <!-- Conditional rendering based on the user being logged in -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
      {{! <script src="./js/bookshelf.js"></script> }}
    {{/if}}

    <!-- Include Bootstrap JS scripts here -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"
    ></script>
    <link rel="stylesheet" href="/css/style.css" />
  </body>

</html>